<link rel="stylesheet" href="/stylesheet/home/style.css">

<%- include("../../partials/header.ejs") %>

<main>
    <%- include("../../partials/card/publication.ejs", {publication: publication, router : `publication/${publication.id}`}) %>

    <br>

    <section class="default-card comments-card">
        <%- include("../../partials/card/publish.ejs", { inComment: true, publication: publication, router: `publication/${publication.id}` }) %>
        <% if (publications && publications.length > 0) { %>
            <% publications.forEach(function(coment) { %>
            <!-- Include do HTML da publicação -->
            <%- include("../../partials/card/publication.ejs", { publication: coment, router : `publication/${publication.id}` }) %>
            <br>
            <% }); %>
        <% } else { %>
            <p class="not-publications-founds">Nenhuma publicação encontrada.</p>
        <% } %>
        
    </section>
</main>